<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Projetos
    </h3>
  </div>
  <div class="panel-body">
    {{#if projects}}
      <div class="table-responsive">
        <table class="table table-hover">
        <thead class="thead-inverse">
          <tr>
            <th>Código</th>
            <th>Projeto</th>
            <th>Data criação</th>
            <th class="text-center">Ação</th>
          </tr>
        </thead>
        <tbody>
          {{#each projects}}
          <tr>
            <td scope="row">
              <a href="projects/{{_id}}">{{code}}</a>
            </td>
            <td>{{name}}</td>
            <td>{{created_at}}</td>
            <td class="text-center">
              <form action="/projects/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE"/>
                <a href="/projects/{{_id}}/edit" class="btn btn-warning">Editar</a>
                <button type="submit" class="btn btn-danger">Remover</button>
                <a href="/projects/{{_id}}" class="btn btn-success">Visualizar</a>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
        </table>
      </div>
      {{else}}
      <p class="text-info">
        Não há projetos cadastrados.
      </p>
    {{/if}}
    <a href="/projects/new" class="btn btn-primary">Novo Projeto</a>
    </div>
  </div>
</div>
