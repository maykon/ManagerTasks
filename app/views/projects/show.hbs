<div class="container">
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      Dados do Projeto
    </h3>
  </div>
  <div class="panel-body">
    {{#if project}}
      <div class="table-responsive">
        <table class="table table-hover">
          <tr>
            <th>Código: </th>
            <td>{{project.code}}</td>
          </tr>
          <tr>
            <th>Nome:</th>
            <td>{{project.name}}</td>
          </tr>
          <tr>
            <th>Data criação</th>
            <td>{{project.created_at}}</td>
          </tr>
        </table>
      </div>
      {{else}}
      <p class="text-info">
        Não há foi possível encontrar o projeto.
      </p>
    {{/if}}
    <a href="/projects" class="btn btn-default">Voltar</a>
    </div>
  </div>
</div>
